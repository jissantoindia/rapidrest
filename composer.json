{
    "name": "rapidrest/rapidrest",
    "description": "High-performance PHP library for building RESTful APIs with modern features like migrations, CLI tools, and more",
    "type": "library",
    "keywords": [
        "rest",
        "api",
        "framework",
        "php",
        "rapidrest",
        "routing",
        "database",
        "migrations",
        "cli"
    ],
    "homepage": "https://github.com/yourusername/rapidrest",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "psr/http-message": "^2.0",
        "psr/container": "^2.0",
        "psr/log": "^3.0",
        "doctrine/annotations": "^2.0",
        "nikic/fast-route": "^1.3",
        "symfony/yaml": "^6.0",
        "vlucas/phpdotenv": "^5.5",
        "ext-pdo": "*",
        "symfony/validator": "^6.0",
        "zircote/swagger-php": "^4.0",
        "monolog/monolog": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "RapidRest\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RapidRest\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "post-create-project-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": ["rapid"]
}
